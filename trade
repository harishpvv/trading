print('%15s %10s %10s' % ('Stock','RSI','Change%'))
print('-'*20)

def print_data(i):
    st = TA_Handler(symbol=i.lower(), screener='india', exchange='nse', interval='5m')
    sd = TA_Handler(symbol=i.lower(), screener='india', exchange='nse', interval='1d')
    change = sd.get_indicators()['change']
    an = st.get_indicators()
    rsi = an['RSI']
    masignal = an['MACD.signal']
    macd = an['MACD.macd']

    if rsi > 65 and change>1 and masignal<macd:
        print('%15s %10.3f %10.3f' % (i,rsi,change))
    if rsi < 30 and change<-1 and masignal>macd:
        print('%15s %10.3f %10.3f' % (i,rsi,change))

pool = Pool(processes=6)
pool.map(print_data, l)
